@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}

<h3>Login Sistema de Veículos</h3>
@using (Html.BeginForm("Index", "Login"))
{
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <span>@Model.message</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <span>Login</span>
            <input type="text" class="form-control" id="login" name="login" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <span>Senha</span>
            <input type="text" class="form-control" id="password" name="password" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <br />
            <div class="text-right">
                <input type="submit" id="send" name="send" class="btn btn-success" value="Acesso" />
                @Html.ActionLink("Novo Cadastro", "Create", "Login",new { } ,new { @class="btn btn-success" })

            </div>

        </div>
    </div>

</div>
}


