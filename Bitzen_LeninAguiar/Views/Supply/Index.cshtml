@model SupplyViewModel
@{
    ViewData["Title"] = "Abastecimentos";
}

<h3>Consulta de Abastecimentos</h3>
<br/>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            @Html.ActionLink("Novo Abastecimento", "Create", "Supply", new { }, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="row">
        <br/>
        <div class="col-sm-10">
            <table id="supplies" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Posto Abastecimento</th>
                        <th>Data Abastecimento</th>
                        <th>/</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.supplies != null)
                    {
                        @foreach (var item in Model.supplies)
                        {
                            <tr>
                                <th>@item.companyname</th>
                                <th>@item.datasupply</th>
                                <th>/</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

