@model VehicleViewModel
@{
    ViewData["Title"] = "Index";
}

<h3>Consulta de Veiculos</h3>
<div class="container-fluid" >
    <div class="row">
        <div class="col-sm-4">
            @Html.ActionLink("Novo Veiculo", "Create", "Vehicle", new { }, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <table id="vehicles" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>/</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.vehicles != null)
                    {
                        @foreach (var item in Model.vehicles)
                        {
                            <tr>
                                <th>@item.brand</th>
                                <th>@item.model</th>
                                <th>/</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

