@model VehicleViewModel
@{
    ViewData["Title"] = "Index";
}

<h3>Consulta de Veiculos</h3>
<div class="container-fluid" >
    <div class="row">
        <div class="col-sm-6">
            @Html.HiddenFor(w => w.userid)
            <span>Marca</span>
            <input type="text" name="brand" class="form-control" />
        </div>
        <div class="col-sm-4">
            <br/>
            <input type="submit" value="Buscar" class="btn btn-success" />
            @Html.ActionLink("Novo Veiculo", "Create", "Vehicle", new { id = TempData["UserId"] }, new { @class = "btn btn-success" })
        </div>
    </div>
    <br/>
    <div class="row">
        <br/>
        <div class="col-sm-10">
            <table id="vehicles" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Kilometragem</th>
                        <th>Placa</th>
                        <th>/</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.vehicles != null)
                    {
                        @foreach (var item in Model.vehicles)
                        {
                            <tr>
                                <th>@item.brand</th>
                                <th>@item.model</th>
                                <th>@item.kilometers</th>
                                <th>@item.plaque</th>
                                <th>/</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

